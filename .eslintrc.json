{
	"extends": "airbnb-base",
	"rules": {
		"no-param-reassign": [
			"error",
			{
				"props": false
			}
		],
		"no-use-before-define": [
			"error",
			{
				"functions": false
			}
		],
		"newline-per-chained-call": 0,
		"no-bitwise": [
			"off"
		],
		"max-len": [
			"off",
			{
				"code": 200
			}
		],
		"no-underscore-dangle": [
			"error",
			{
				"allow": [
					"_id"
				]
			}
		],
		"object-curly-newline": [
			"off",
			{
				"multiline": true
			}
		],
		"no-restricted-syntax": [
			"off"
		],
		"indent": [
			"error",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"no-tabs": "off",
		"comma-dangle": [
			"error",
			"always-multiline",
			{
				"functions": "never"
			}
		],
		"no-plusplus": [
			"error",
			{
				"allowForLoopAfterthoughts": true
			}
		]
	}
}